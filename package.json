{
  "name": "integration-app-mcp-server",
  "version": "1.2.0",
  "description": "MCP server for all Integration App connections",
  "main": "dist/server/index.js",
  "scripts": {
    "start": "tsx src/server/index.ts",
    "start:test": "NODE_ENV=test PORT=3009 tsx src/server/index.ts",
    "dev": "tsx watch src/server/index.ts",
    "test": "vitest run --printConsoleTrace=true --silent=false",
    "test:watch": "vitest",
    "lint": "eslint . --ext .ts",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "keywords": [
    "mcp",
    "integration-app",
    "ai-agent"
  ],
  "author": "Integration.app <support@integration.app>",
  "license": "ISC",
  "dependencies": {
    "@integration-app/sdk": "^1.0.0",
    "@modelcontextprotocol/sdk": "^1.15.0",
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "tsx": "^4.7.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/node": "^20.11.19",
    "dotenv": "^16.4.4",
    "prettier": "^3.5.3",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}